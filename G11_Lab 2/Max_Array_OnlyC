
//MaxArray with only C

//Without user input 

#include <stdio.h> 
#include <stdlib.h> 


int main(){
	int array[] = {10, 20, 45, 5, 6, 87, 22};
	int max =array[0];
	int arr_size = sizeof(array);
	int pos =0;

	for(int x=0; x<arr_size;x++){
		if(array[x] >max){
			max= array[x];
		}
	}
	printf("The largest integer within the array is %d\n", max);
	return max; 
}